{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "allowJs": true,
    "checkJs": false,
    "outDir": "build",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "generated": ["generated"],
      "generated/*": ["generated/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "generated", "build", "src/handlers"]
}
